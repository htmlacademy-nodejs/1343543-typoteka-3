extends ../../_layouts/layout.pug

block content
  include ../../components/header/header-menu.pug
  main.main-page.main-page--padding
    section.main-page__publication.publication
      h1.publication__title Комментарии
      ul.publication__list
        each comment of comments
          li.publication__list-item
            .publication__header
              img.publication__list-image(src=`/img/${comment[`users.avatar`]}` width='20' height='20' alt='Аватар пользователя')
              b.publication__list-name #{comment[`users.name`]}
              time.publication__item-time(datetime=`${comment.createdAt}`) #{formatDate(comment.createdAt, true)}
            a.publication__item-text(href='#') #{comment.text}
            p.publication__text-strong #{comment[`articles.title`]}
            button.publication__button.button.button--close-item(type='button')
              span.visually-hidden Закрыть строку списка
