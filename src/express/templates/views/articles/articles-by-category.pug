extends ../../_layouts/layout.pug
block content
  include ../../components/header/header.pug
  main.articles-category
    h1 #{articles.category.name}
    section.articles-category__theme-list
      h2.visually-hidden Список тем
      ul.themes
        include ../../components/common/categories-selected.pug
    section.articles-category__list.preview
      h2.visually-hidden Список превью статей
      ul.preview__list
        each article of articles.current
          include ../../components/common/card.pug
    +pagination(page, totalPages, 2, `?`)
