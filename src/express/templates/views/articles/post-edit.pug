extends ../../_layouts/layout.pug

block content
  -
    const isChecked = (categoryId) => {
      const result = article.categories.findIndex((articleCategory) => articleCategory.id === categoryId);
      return (result !== -1);
    }
  include ../../components/header/header.pug
  main
    section
      .popup.popup--new-publication.popup--anti
        .new-publication
          form(action='#' method='POST' enctype='multipart/form-data' autocomplete='off')
            .new-publication__header
              h1 Редактировать публикацию
              .new-publication__date-form
                h3 Дата публикации
                //- TODO - дата инициализируется в vendor.js
                //- на завершающем этапе подумать как передать дату из article в flatpickr
                //- думаю изменить класс, написать заново инициализацию в main.js, дату брать из дата-атрибута (добавить)
                .new-publication__date-form-division
                  .new-publication__date-block
                    label(for='new-publication-date' aria-label='Календарь')
                    input#new-publication-date(type='text' name='date' placeholder='2019-03-21')
              button.new-publication__button.button.button--colored(type='submit') Опубликовать
            a.popup__button.button.button--popup-close(aria-label='Закрыть окно')
              | Закрыть
              | окно
            .new-publication__form.form
              .form__wrapper.form__wrapper--intro
                .form__field
                  label
                    input(type='text' name='title' placeholder='Заголовок' value=article.title required='')
                .form__field.form__field--post-image
                  label
                    //- TODO - в моках пока нет фотки
                    input#image-name-field(type='text' name='photo' placeholder='Фотография' readonly='' value=`${article.picture}`)
                  .form__image-loader.form__image-loader--publication
                    label
                      input.visually-hidden(type='file' name='upload')
                      | Обзор
                .new-publication__category-wrapper
                  each category of categories
                    .new-publication__checkbox
                      input(checked=isChecked(category.id) type='checkbox' name=`category-${category.id}` id=`category-${category.id}` value=`${category.id}`)
                      label(for=`category-${category.id}`) #{category.name}
                  a.new-publication__form-link.button.button--transparent(href='#') Добавить категорию
                .new-publication__category-wrapper
                  +insertErrorMessage(validationMessages, errorType)
              .form__wrapper.form__wrapper--text
                .form__field.form__field--publication-text
                  label
                    textarea(rows='5' name='announcement' placeholder='Анонс публикации')
                      | #{article.announce}
                .form__field.form__field--publication-text
                  label
                    textarea(rows='10' name='full-text' placeholder='Полный текст публикации')
                      | #{article.fullText}
