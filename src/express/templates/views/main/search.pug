extends ../../_layouts/layout.pug
block content
  include ../../components/header/header-menu.pug
  main
    section.search-page
      .search-page__wrapper
        h1 Поиск
        .search.search-page__form
          form(action='/search' method='get')
            label
              input(type='text' name='search' placeholder=`Что ищем` value=`${query}`)
            button.search__button.button.button--transparent(type='submit') Найти
          if results.length !== 0
            each result of results
              include ../../components/search/result.pug
          else if query !== ``
            include ../../components/search/no-results.pug

